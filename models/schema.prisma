datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider             = "prisma-client-py"
    recursive_type_depth = -1
}

// User model
model User {
    id            String   @id @default(uuid())
    username      String
    email         String   @unique
    emailVerified Boolean  @default(false)
    password      String
    bio           String?
    profileImage  String?
    coverImage    String?
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}
